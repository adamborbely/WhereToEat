@model RestaurantListModel
@{
    ViewData["Title"] = "Restaurants";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Zip Code</th>
                <th scope="col">City</th>
                <th scope="col">Address</th>
                <th scope="col">Rating</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Restaurants.Count; i++)
            {
                <tr>
                    <th scope="row"><a asp-controller="Restaurant" asp-action="Details" asp-route-id="@Model.Restaurants[i].Id">@Model.Restaurants[i].Name</a></th>
                    <td>@Model.Restaurants[i].ZipCode</td>
                    <td>@Model.Restaurants[i].City</td>
                    <td>@Model.Restaurants[i].Address</td>
                    <td>@Model.Restaurants[i].Rating</td>
                </tr>
            }
        </tbody>
    </table>
</div>