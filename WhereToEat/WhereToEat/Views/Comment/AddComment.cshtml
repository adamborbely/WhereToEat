@using System.Security.Claims
@using System;
@model WhereToEat.Models.CommentModel

@{
    ViewData["Title"] = "AddComment";
}

<h1>Add Comment</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" class="form-control" value="@(Context.User.FindFirstValue("Id"))">
            <input type="hidden" asp-for="RestaurantId" class="form-control" value="@Model.RestaurantId">
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@Model.RestaurantId">Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
