@using System.Security.Claims
@model WhereToEat.Models.RestaurantDetailsModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h2> @Html.DisplayFor(model => model.Name) </h2>

    <br />

    @if (!string.IsNullOrEmpty(Model.ImageURL))
    {
    <img class="restaurant-img" src="/uploads/@Model.ImageURL" />
    }
    @if (Model.Categories.Count > 0)
    {
    @for (int i = 0; i < Model.Categories.Count; i++)
        {
    <div>
        <a>@Model.Categories[i].Text</a>
    </div>
        }
    }


</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>

</div>
<div>
    @if (Model.Comments.Count > 0)
    {
    <hr />
    <h5>Comment(s): </h5>
    <br />
    <div class="container">
        <table class="table">
            <tbody>
                @for (int i = 0; i < Model.Comments.Count; i++)
                    {
                <tr>
                    <td>@Model.Comments[i].Message</td>
                    <th scope="row">
                        <a>
                            @Model.Comments[i].PostTime
                        </a>
                    </th>
                    <th scope="row">
                        <a>
                            @Model.Comments[i].Username
                        </a>
                    </th>
                </tr>
                    }
            </tbody>
        </table>
    </div>

    }

    <a asp-controller="Comment" asp-action="AddComment" asp-route-restaurantId="@Model.Id">Add Comment</a>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
