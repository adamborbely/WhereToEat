@model WhereToEat.Models.UserRegisterModel

@{
    ViewData["Title"] = "RestaurantOwnerRegister";
}

<h1>Restaurant Owner Registration</h1>

<form method="post">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input type="text" class="form-control" asp-for="Username" required />
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email" required />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" class="form-control" asp-for="Password" required>
        </div>
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
</form>


